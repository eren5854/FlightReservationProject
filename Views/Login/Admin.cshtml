@{
    var cokieName = Context.Request.Cookies["CookieName"];
}

<h3>Session User : @Context.Session.GetString("SessionUser")</h3>
<h3>Cookie Name : @cokieName</h3>
<br />
<br />

<div class="row" style=" height: 100%;">
    <div style="display:flex;">
        <div class="form-group me-2">
            <input onclick="showFlightOperations()" type="button" value="Add Plane" class="btn btn-primary" />
        </div>
        <div class="form-group me-2">
            <input onclick="showMembers()" type="button" value="Members" class="btn btn-secondary" />
        </div>
        <div class="form-group me-2">
            <input onclick="showMembers()" type="button" value="Members" class="btn btn-secondary" />
        </div>
    </div>

    <div id="membersDiv" style="display: none; margin-top: 30px">
        <!-- Members Alanı İçeriği Buraya Gelecek -->
        Members Alanı
    </div>
    <div id="addPlaneDiv" style="display: block; margin-top: 30px;">
        <!-- Members Alanı İçeriği Buraya Gelecek -->
        <div class="form-group" >
            <label  class="control-label">Uçak Adı</label>
            <input  class="form-control" style="width: 30%;"/>
            <label class="control-label">Economy Seat Capacity</label>
            <input class="form-control" style="width: 30%;" />
            <label class="control-label">Business Seat Capacity</label>
            <input class="form-control" style="width: 30%;" />
            <input type="button" value="Ok" class="btn btn-primary mt-2"/>
        </div>
    </div>
</div>

<script>
    function showMembers() {
        document.getElementById("membersDiv").style.display = "block";
        document.getElementById("addPlaneDiv").style.display = "none";
    }

    function showFlightOperations() {
        document.getElementById("membersDiv").style.display = "none";
        document.getElementById("addPlaneDiv").style.display = "block";
    }
</script>