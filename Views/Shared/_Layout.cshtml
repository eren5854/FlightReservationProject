<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center">
        <div class="container d-flex align-items-center justify-content-between">

            <div class="logo">
                <h1 class="text-light"><a href="index.html">@_localization.GetKey("FlightReservationProject")</a></h1>
                <!-- Uncomment below if you prefer to use an image logo -->
                <!-- <a href="index.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
            </div>

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="active" style="text-decoration:none" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="dropdown">
                        <a>
                            <i class="fa fa-language" style="font-size:15px; color: #000;"></i>
                            <span>
                                @if (ViewBag.SelectedLanguage == "en-US")
                                {
                                    @_localization.GetKey("English").Value
                                }
                                else
                                {
                                    @_localization.GetKey("Turkish").Value
                                }
                            </span>
                        </a>
                        <ul>
                            <li>
                                <a class="dropdown-item" asp-controller="Shared" asp-action="ChangeLanguage" asp-route-culture="en-US">
                                    @_localization.GetKey("English").Value
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Shared" asp-action="ChangeLanguage" asp-route-culture="tr-TR">
                                    @_localization.GetKey("Turkish").Value
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li><a class="getstarted" asp-controller="Account" asp-action="LogOut">@_localization.GetKey("LogOut")</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- End Header -->
    <!-- ======= Hero Section ======= -->
    <section id="hero">
        <div class="hero-container" data-aos="fade-up">
            <h1>Welcome to Kangal Airlines</h1>
            <h2>Kim demiş Kangallar uçamaz diye :D</h2>
