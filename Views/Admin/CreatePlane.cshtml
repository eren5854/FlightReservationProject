@model FlightReservationV3.Models.Plane

@{
    ViewData["Title"] = "CreatePlane";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>CreatePlane</h1>

<h4>Plane</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePlane">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlaneName" class="control-label"></label>
                <input asp-for="PlaneName" class="form-control" />
                <span asp-validation-for="PlaneName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlaneDescription" class="control-label"></label>
                <input asp-for="PlaneDescription" class="form-control" />
                <span asp-validation-for="PlaneDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

