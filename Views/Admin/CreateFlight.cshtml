@model FlightReservationV3.Models.Flight

@{
    ViewData["Title"] = "CreateFlight";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>CreateFlight</h1>

<h4>Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
