
@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/login-style.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/3.5.0/remixicon.css" crossorigin="">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />


<div class="login">
    <img src="~/img/hero-bg.jpg" alt="image" class="login__bg">

    <form action="" class="login__form" style="border: 2px solid rgb(26,26,26); backdrop-filter: blur(50px);">
        <h1 style="color: rgb(26,26,26)" class="login__title">@_localization.GetKey("RegisterPage").Value</h1>

        <div class="login__inputs">

            <div class="login__box">
                <input type="text" placeholder="@_localization.GetKey("FirstName").Value" required class="login__input">
                <i class="ri-user-fill"></i>
            </div>

            <div class="login__box">
                <input type="text" placeholder="@_localization.GetKey("LastName").Value" required class="login__input">
                <i class="ri-user-fill"></i>
            </div>

            <div class="login__box">
                <input type="email" placeholder="@_localization.GetKey("Email").Value" required class="login__input">
                <i class="ri-mail-fill"></i>
            </div>

            <div class="login__box">
                <input type="password" placeholder="@_localization.GetKey("Password").Value" required class="login__input">
                <i class="ri-lock-2-fill"></i>
            </div>
        </div>

        <button type="submit" class="login__button">@_localization.GetKey("SignIn")</button>

        <div class="login__register">
            @_localization.GetKey("DoYouHaveAlreadyAnAccount") <a asp-controller="Account" asp-action="Login">@_localization.GetKey("Login")</a>
        </div>
        <ul class="navbar-nav">
            <li class="nav-item dropdown" style="justify-content: center">
                <a class="nav-link" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="width:20%">
                    <i class="fa fa-language" style="font-size:30px; color: #fff;"></i>
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <a class="dropdown-item" asp-controller="Shared" asp-action="ChangeLanguage" asp-route-culture="en-US">
                            @_localization.GetKey("English").Value
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item" asp-controller="Shared" asp-action="ChangeLanguage" asp-route-culture="tr-TR">
                            @_localization.GetKey("Turkish").Value
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://kit.fontawesome.com/5ff4fe19e2.js" crossorigin="anonymous"></script>