@{
    // Layout = null;
}
<link rel="stylesheet" href="~/css/login-style.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/3.5.0/remixicon.css" crossorigin="">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<section id="about" class="about" style="margin-top:-900px; background-color:transparent">

<div class="login">
    @* <img src="~/img/hero-bg.jpg" alt="image" class="login__bg"> *@

    <form asp-controller="Account" asp-action="Login" method="post" autocomplete="off" class="login__form" style="border: 0px solid rgb(26, 26, 26); backdrop-filter: blur(50px);">
        <h1 style="color:rgb(26,26,26)" class="login__title">@_localization.GetKey("LoginPage").Value</h1>
        
        <div class="login__inputs">
            <div class="login__box">
                <input type="email" placeholder="@_localization.GetKey("Email").Value" required class="login__input" name="email">
                <i class="ri-mail-fill"></i>
            </div>

            <div class="login__box">
                <input type="password" placeholder="@_localization.GetKey("Password").Value" required class="login__input" name="password">
                <i class="ri-lock-2-fill"></i>
            </div>
        </div>

        <button type="submit" class="login__button">@_localization.GetKey("Login").Value</button>

        <div class="login__register">
            @_localization.GetKey("DoYouHaveNotAnAccount").Value <a asp-controller="Account" asp-action="Register">@_localization.GetKey("SignIn").Value</a>
        </div>
        <div>
            <p>@TempData["LoginError"]</p>
        </div>
    </form>
</div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://kit.fontawesome.com/5ff4fe19e2.js" crossorigin="anonymous"></script>