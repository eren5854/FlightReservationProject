@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/login-style.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/3.5.0/remixicon.css" crossorigin="">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />


<div class="login">
    <img src="~/img/hero-bg.jpg" alt="image" class="login__bg">

    <form asp-controller="Account" asp-action="RegisterSuccess" autocomplete="off" class="login__form" style="border: 2px solid rgb(26,26,26); backdrop-filter: blur(50px);">
        <h1 style="color: rgb(26,26,26)" class="login__title">@_localization.GetKey("RegisterSuccess").Value</h1>
        <button asp-controller="Account" asp-action="Login" class="login__button">@_localization.GetKey("Login")</button>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://kit.fontawesome.com/5ff4fe19e2.js" crossorigin="anonymous"></script>
